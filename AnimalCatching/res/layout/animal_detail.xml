<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4e4e4e"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/animal_detail_bg_nw"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/detail_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_set_location_img_height"
                android:scaleType="fitXY"
                android:src="@drawable/inthanon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tran" >

            </RelativeLayout>
"
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

            <TextView
                android:id="@+id/text_name_th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_padding"
                android:layout_marginTop="@dimen/layout_padding"
                android:text="กระต่าย"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_name_th"
                android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image_animal"
                    android:layout_width="@dimen/set_image_max_width"
                    android:layout_height="@dimen/set_image_max_height"
                    android:maxHeight="@dimen/set_image_max_height"
                    android:maxWidth="@dimen/set_image_max_width"
                    android:scaleType="fitXY"
                    android:src="@drawable/not_found" />
                
            </LinearLayout>
            
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/layout_padding"
            android:paddingLeft="@dimen/layout_padding" >

            <TextView
                android:id="@+id/text_name_en_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_padding"
                android:layout_marginTop="@dimen/layout_padding"
                android:text="ชื่อภาษาอังกฤษ" />

            <TextView
                android:id="@+id/text_name_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_padding"
                android:text="Rabbit"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_name_en" />

            <TextView
                android:id="@+id/text_name_sci_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_padding"
                android:text="ชื่อวิทยาศาสตร์" />

            <TextView
                android:id="@+id/text_name_sci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_padding"
                android:text="Rabbit"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_name_en" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/layout_padding"
                android:paddingLeft="@dimen/layout_padding"
                android:paddingRight="@dimen/layout_padding" >

                <android.webkit.WebView
                    android:id="@+id/text_animal_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_padding"
                    android:background="@color/cream" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <LinearLayout
                        android:id="@+id/linear_star"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/image_star"
                            android:layout_width="@dimen/set_image_type_width"
                            android:layout_height="@dimen/set_image_type_heigth"
                            android:padding="3dp"
                            android:src="@drawable/ic_star" />

                        <TextView
                            android:id="@+id/text_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:text="สัตว์ป่าสงวน" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_heart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/image_heart"
                            android:layout_width="@dimen/set_image_type_width"
                            android:layout_height="@dimen/set_image_type_heigth"
                            android:padding="3dp"
                            android:src="@drawable/ic_heart" />

                        <TextView
                            android:id="@+id/text_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:text="สัตว์หายาก" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/image_money"
                            android:layout_width="@dimen/set_image_type_width"
                            android:layout_height="@dimen/set_image_type_heigth"
                            android:padding="3dp"
                            android:src="@drawable/ic_money" />

                        <TextView
                            android:id="@+id/text_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:text="สัตว์เศรษฐกิจ" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_pet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/image_pet"
                            android:layout_width="@dimen/set_image_type_width"
                            android:layout_height="@dimen/set_image_type_heigth"
                            android:padding="3dp"
                            android:src="@drawable/ic_pet" />

                        <TextView
                            android:id="@+id/text_pet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:text="สัตว์เลี้ยง" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_eat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/image_eat"
                            android:layout_width="@dimen/set_image_type_width"
                            android:layout_height="@dimen/set_image_type_heigth"
                            android:padding="3dp"
                            android:src="@drawable/ic_eat" />

                        <TextView
                            android:id="@+id/text_eat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:text="สัตว์บริโภค" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_plane"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/image_plane"
                            android:layout_width="@dimen/set_image_type_width"
                            android:layout_height="@dimen/set_image_type_heigth"
                            android:padding="3dp"
                            android:src="@drawable/ic_plane" />

                        <TextView
                            android:id="@+id/text_plane"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:text="สัตว์ส่งออก" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_hunt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/image_hunt"
                            android:layout_width="@dimen/set_image_type_width"
                            android:layout_height="@dimen/set_image_type_heigth"
                            android:padding="3dp"
                            android:src="@drawable/ic_hunt" />

                        <TextView
                            android:id="@+id/text_hunt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:text="สัตว์ถููกล่า" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>